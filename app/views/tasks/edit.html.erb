<h1>New task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :detail %>
  <%= f.text_field :detail %>
  <br>
  <br>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
<br>
<br>

<%= link_to "back to list", tasks_path %>
